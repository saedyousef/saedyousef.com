{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2017", "dom"],
    "module": "es2020",
    "outDir": "dist",
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "rootDir": "ts"
  },
  "include": [
    "ts/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
